<body>
  <div class="container">
    <h1>Groep 4 ‚Äì tafels 2,3,4,5 en 10</h1>
    <p class="subtitle">Maak in 2 minuten zoveel mogelijk sommen met de tafels 2, 3, 4, 5 en 10!</p>

    <div class="stats">
      <div>‚è± Tijd: <span id="time">2:00</span></div>
      <div>‚úÖ Goed: <span id="score">0</span></div>
      <div>üìä Pogingen: <span id="attempts">0</span></div>
    </div>

    <div class="question" id="question">Druk op ‚ÄúStart‚Äù</div>

    <input type="number" id="answer" placeholder="antwoord" disabled autocomplete="off">
    <div id="feedback" class="feedback"></div>

    <button id="startBtn">Start 2-minutentest</button>

    <div id="result" class="result"></div>

    <h2>Overzicht scores</h2>
    <table id="scoreTable">
      <thead>
        <tr>
          <th>Naam</th>
          <th>Goed</th>
          <th>Pogingen</th>
          <th>Percentage</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>

<script>
  const timeEl = document.getElementById("time");
  const scoreEl = document.getElementById("score");
  const attemptsEl = document.getElementById("attempts");
  const questionEl = document.getElementById("question");
  const answerInput = document.getElementById("answer");
  const feedbackEl = document.getElementById("feedback");
  const startBtn = document.getElementById("startBtn");
  const resultEl = document.getElementById("result");

  let timeLeft = 120;
  let timerId = null;
  let score = 0;
  let attempts = 0;
  let currentA = null;
  let currentB = null;
  let gameActive = false;

  // GROEP 4: alleen tafels 2,3,4,5 en 10
  const allowedTables = [2, 3, 4, 5, 10];

  function formatTime(seconds) {
    const m = Math.floor(seconds / 60);
    const s = seconds % 60;
    return m + ":" + (s < 10 ? "0" + s : s);
  }

  function randomInt(min, max) {
    return Math.floor(Math.random() * (max - min + 1)) + min;
  }

  function newQuestion() {
    currentA = allowedTables[Math.floor(Math.random() * allowedTables.length)];
    currentB = randomInt(1, 10);
    questionEl.textContent = `${currentA} √ó ${currentB} = ?`;
    answerInput.value = "";
    answerInput.focus();
  }

  function startTimer() {
    timeLeft = 120;
    timeEl.textContent = formatTime(timeLeft);

    timerId = setInterval(() => {
      timeLeft--;
      timeEl.textContent = formatTime(timeLeft);
      if (timeLeft <= 0) {
        endGame();
      }
    }, 1000);
  }

  function startGame() {
    if (gameActive) return;
    gameActive = true;
    score = 0;
    attempts = 0;
    scoreEl.textContent = score;
    attemptsEl.textContent = attempts;
    feedbackEl.textContent = "";
    resultEl.textContent = "";
    answerInput.disabled = false;
    startBtn.disabled = true;

    newQuestion();
    startTimer();
  }

  function endGame() {
    if (!gameActive) return;
    gameActive = false;
    clearInterval(timerId);
    answerInput.disabled = true;
    startBtn.disabled = false;

    const percentage = Math.round((score / attempts) * 100) || 0;
    resultEl.textContent = `Je had ${score} goed van ${attempts} pogingen. (${percentage}%)`;

    const naam = prompt("Naam leerling:");
    const tableBody = document.querySelector("#scoreTable tbody");
    const row = document.createElement("tr");
    row.innerHTML = `
      <td>${naam || "-"}</td>
      <td>${score}</td>
      <td>${attempts}</td>
      <td>${percentage}%</td>
    `;
    tableBody.appendChild(row);
  }

  function checkAnswer(e) {
    if (e.key !== "Enter" || !gameActive) return;

    const value = parseInt(answerInput.value, 10);
    if (isNaN(value)) return;

    const correct = currentA * currentB;
    attempts++;
    attemptsEl.textContent = attempts;

    if (value === correct) {
      score++;
      scoreEl.textContent = score;
      feedbackEl.textContent = "Goed zo!";
      feedbackEl.className = "feedback correct";
    } else {
      feedbackEl.textContent = `Helaas, het was ${correct}.`;
      feedbackEl.className = "feedback wrong";
    }

    newQuestion();
  }

  startBtn.addEventListener("click", startGame);
  answerInput.addEventListener("keydown", checkAnswer);
</script>

</body>
</html>
